<% include ./partials/header.ejs %>
    <div class="w-full h-screen bg-zinc-900 relative">
        <div class="w-full px-3 py-3 pb-7 absolute bg-red-500"
            style="background: linear-gradient(to bottom, rgba(0,0,0,0.6),rgba(0,0,0,0));">
            <h3 class="font-regular text-white flex"> <a href="/feed"> <i
                        class="w-7 h-7 mr-2 text-sm bg-white/20 rounded-full flex items-center justify-center ri-arrow-left-line"></i></a>
                        <%= storyuser.username %></h3>
            <div class="progresscontainer w-full h-1 mt-2 bg-zinc-100/10">
                <div class="progress w-0 h-full bg-white">

                </div>
            </div>
        </div>
        <div class="picture w-full h-full bg-zinc-900 overflow-hidden">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= storyuser.stories[num].image %>" alt="">
        </div>
    </div>
    <script>
        var prog = document.querySelector(".progress");
        var count = 0;
        var int = setInterval(function () {
            if (count < 100) {
                count++;
                prog.style.width = `${count}%`;
            }else{
                // clearInterval(int)
                window.location.href = "http://localhost:3000/story/<%= storyuser._id %>/<%= Number(num) +1 %>"
            }
        },30)
    </script>
    <% include ./partials/footer.ejs %>