<% include ./partials/header.ejs %>
    <div class="users bg-zinc-900 p-4 min-h-screen">
        <div class="flex py-4 justify-between  text-white">
            <h1 class="">following</h1>
            <a href="/feed"><i class="ri-close-line"></i></a>
            
        </div>
        <% user.following.forEach(userfollowing=> { %>
            <a href="/msg/<%= userfollowing.username %>">
                <div>
                    <div class="flex items-center p-2 mb-1 space-x-4 text-white bg-zinc-800 w-full text-white rounded">
                        <img src="/images/uploads/<%= userfollowing.profilepicture %>" alt="User" class="w-12 h-12 rounded-full">
                        <div>
                            <h1 class="">
                                <%= userfollowing.username %>
                            </h1>
                            <h3 class="opacity-30">
                                <%= userfollowing.name %>
                            </h3>
                        </div>
                    </div>
                </div>

            </a>
            <% });%>
    </div>
    <% include ./partials/footer.ejs %>